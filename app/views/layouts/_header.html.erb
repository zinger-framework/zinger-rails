<div class="login-header box-shadow">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <div class="brand-logo">
      <a href="<%= dashboard_path %>">
        <img src="/vendors/images/zinger-logo.svg" alt="">
      </a>
    </div>
    <div class="login-menu">
      <ul>
        <li>
          <% if session[:authorization].present? %>
            <%= link_to 'Logout', auth_logout_path, method: :delete %>
          <% elsif "#{params['controller']}##{params['action']}" == 'admin/auth/login#index' %>
            <%= link_to 'Register', auth_signup_index_path %>
          <% else %>
            <%= link_to 'Login', auth_login_index_path %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
