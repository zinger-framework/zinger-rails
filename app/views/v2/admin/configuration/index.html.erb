<ul>
  <% current_level = 1 %>
  <% @properties.each do |p| %>
    <% level = p.name.split('.').length %>
    <% if level < current_level %>
      <% (current_level - level).times do %>
        </ul></li>
      <% end %>
    <% end %>
    <% current_level = level %>

    <% if p.allowed.length == 0 %>
      <li> <%= p.name %><ul>
    <% else %>
      <li> <%= p.name %></li>
    <% end %>
  <% end %>
</ul>
<br>
<h1>Insert Operation</h1>
<br>
<%= form_tag v2_admin_configuration_index_path do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <br>
  <%= label_tag :text %>
  <%= text_field_tag :text %>
  <br>
  <%= label_tag :default %>
  <%= text_field_tag :default %>
  <br>
  <%= submit_tag 'Create' %>
<% end %>
<br>
<h1>Update Operation</h1>
<br>
<%= form_tag(v2_admin_configuration_path(@properties.second), method: :patch) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <br>
  <%= label_tag :text %>
  <%= text_field_tag :text %>
  <br>
  <%= label_tag :default %>
  <%= text_field_tag :default %>
  <br>
  <%= submit_tag 'Update' %>
<% end %>
<br>
<h1>Delete Operation</h1>
<br>
<%= form_tag(v2_admin_configuration_path(@properties.second), method: :delete) do %>
  <%= label_tag :id %>
  <%= text_field_tag :id %>
  <br>
  <%= submit_tag 'Delete' %>
<% end %>
