<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <img src="/vendors/images/login.svg" alt="">
      </div>
      <div class="col-md-6">
        <div class="login-box bg-white box-shadow border-radius-10">
          <div class="login-title">
            <h2 class="text-center text-primary">Forgot Password</h2>
          </div>
          <%= form_tag reset_password_auth_index_path do %>
            <div class="input-group custom">
              <input type="email" name="email" class="form-control form-control-lg" placeholder="hello@example.com" required>
              <div class="input-group-append custom">
                <span class="input-group-text"><i class="icon-copy dw dw-email"></i></span>
              </div>
            </div>

            <div class="input-group custom">
              <input type="text" name="otp" class="form-control form-control-lg" placeholder="123456">
              <div class="input-group-append custom">
                <span class="input-group-text"><i class="dw dw-key3"></i></span>
              </div>
            </div>

            <div class="row pb-30">
              <div class="col-6"></div>
              <div class="col-6">
                <div class="forgot-password"><%= link_to 'Resend OTP', resend_otp_auth_index_path %></div>
              </div>
            </div>

            <div class="input-group mb-0">
              <input class="btn btn-primary btn-lg btn-block" type="submit" value="Verify OTP">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
