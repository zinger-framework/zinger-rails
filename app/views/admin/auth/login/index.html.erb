<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 col-lg-7">
        <img src="/vendors/images/login.svg" alt="">
      </div>
      <div class="col-md-6 col-lg-5">
        <div class="login-box bg-white box-shadow border-radius-10">
          <div class="login-title">
            <h2 class="text-center text-primary">Login to <%= PlatformConfig['name'] %></h2>
          </div>
          <%= form_tag session[:authorization].blank? ? auth_login_index_path : verify_otp_auth_login_index_path do %>
            <div class="select-role">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn">
                  <input type="radio" name="user_type" id="user_type">
                  <div class="icon"><img src="/vendors/images/briefcase.svg" class="svg" alt=""></div>
                  <span>I'm <%= PlatformConfig['name'] %></span>
                  Admin
                </label>
                <label class="btn">
                  <input type="radio" name="user_type" id="user_type">
                  <div class="icon"><img src="/vendors/images/person.svg" class="svg" alt=""></div>
                  <span>I'm <%= PlatformConfig['name'] %></span>
                  Employee
                </label>
              </div>
            </div>

            <% if session[:authorization].blank? %>
              <div class="input-group custom">
                <input type="email" name="email" class="form-control form-control-lg" placeholder="hello@example.com" required>
                <div class="input-group-append custom">
                  <span class="input-group-text"><i class="icon-copy dw dw-email"></i></span>
                </div>
              </div>

              <div class="input-group custom">
                <input type="password" name="password" class="form-control form-control-lg" placeholder="**********" required>
                <div class="input-group-append custom">
                  <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                </div>
              </div>

              <div class="row pb-30">
                <div class="col-6"></div>
                <div class="col-6">
                  <div class="forgot-password"><%= link_to 'Forgot Password?', auth_forgot_password_index_path %></div>
                </div>
              </div>
            <% else %>
              <div class="input-group custom">
                <input type="text" name="mobile" class="form-control form-control-lg" disabled value="+91 ******<%= @employee.mobile[-4..-1] %>">
                <div class="input-group-append custom">
                  <span class="input-group-text"><i class="icon-copy dw dw-phone-call"></i></span>
                </div>
              </div>

              <div class="input-group custom">
                <input type="text" name="otp" class="form-control form-control-lg" placeholder="OTP" required>
                <div class="input-group-append custom">
                  <span class="input-group-text"><i class="dw dw-key3"></i></span>
                </div>
              </div>

              <div class="row pb-30">
                <div class="col-6"></div>
                <div class="col-6">
                  <div class="forgot-password"><%= link_to 'Resend OTP', resend_otp_auth_login_index_path %></div>
                </div>
              </div>
            <% end %>

            <div class="input-group mb-0">
              <input class="btn btn-primary btn-lg btn-block" type="submit" value="Login Now">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
