<link rel="stylesheet" type="text/css" href="/plugins/jquery-steps/jquery.steps.css">

<div class="register-page-wrap d-flex align-items-center flex-wrap justify-content-center">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 col-lg-7">
        <img src="/vendors/images/login.svg" alt="">
      </div>
      <div class="col-md-6 col-lg-5">
        <div class="register-box bg-white box-shadow border-radius-10">
          <div class="wizard-content">
            <%= form_tag auth_signup_index_path, class: 'tab-wizard2 wizard-circle wizard' do %>
              <h5>Basic Information</h5>
              <section>
                <div class="form-wrap max-width-600 mx-auto">
                  <div class="input-group custom">
                    <input type="text" name="user_name" class="form-control form-control-lg" placeholder="Your name" required>
                    <div class="input-group-append custom">
                      <span class="input-group-text"><i class="icon-copy dw dw-name"></i></span>
                    </div>
                  </div>

                  <div class="input-group custom">
                    <input type="email" name="email" class="form-control form-control-lg" placeholder="Email address" required>
                    <div class="input-group-append custom">
                      <span class="input-group-text"><i class="icon-copy dw dw-email"></i></span>
                    </div>
                  </div>

                  <div class="input-group custom">
                    <input type="phone" name="mobile" class="form-control form-control-lg" placeholder="Mobile number" required>
                    <div class="input-group-append custom">
                      <span class="input-group-text"><i class="icon-copy dw dw-smartphone-1"></i></span>
                    </div>
                  </div>

                  <div class="input-group custom">
                    <input type="password" name="new_password" class="form-control form-control-lg" placeholder="Password" required>
                    <div class="input-group-append custom">
                      <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                    </div>
                  </div>
                </div>
              </section>

              <h5>Verify Information</h5>
              <section>
                <div class="form-wrap max-width-600 mx-auto">
                  <div class="input-group custom">
                    <input type="text" name="email_otp" class="form-control form-control-lg" placeholder="OTP (Received from email)">
                    <div class="input-group-append custom">
                      <span class="input-group-text"><i class="dw dw-key3"></i></span>
                    </div>
                  </div>

                  <div class="row pb-30">
                    <div class="col-6"></div>
                    <div class="col-6">
                      <div class="forgot-password"><%= link_to 'Resend OTP', send_otp_auth_signup_index_path %></div>
                    </div>
                  </div>

                  <div class="input-group custom">
                    <input type="text" name="mobile_otp" class="form-control form-control-lg" placeholder="OTP (Received from mobile)">
                    <div class="input-group-append custom">
                      <span class="input-group-text"><i class="dw dw-key3"></i></span>
                    </div>
                  </div>

                  <div class="row pb-30">
                    <div class="col-6"></div>
                    <div class="col-6">
                      <div class="forgot-password"><%= link_to 'Resend OTP', send_otp_auth_signup_index_path %></div>
                    </div>
                  </div>
                </div>
              </section>

              <h5>Shop Information</h5>
              <section>
                <div class="form-wrap max-width-600 mx-auto">
                  <div class="input-group custom">
                    <input type="text" name="shop_name" class="form-control form-control-lg" placeholder="Shop name" required>
                    <div class="input-group-append custom">
                      <span class="input-group-text"><i class="dw dw-shop"></i></span>
                    </div>
                  </div>

                  <div class="form-group">
                    <input type="text" name="opening_time" class="form-control time-picker-default" placeholder="Opening time"required>
                    <small class="form-text text-muted">Opening time<br></small>
                  </div>

                  <div class="form-group">
                    <input type="text" name="closing_time" class="form-control time-picker-default" placeholder="Closing time"required>
                    <small class="form-text text-muted">Closing time<br></small>
                  </div>
                </div>
              </section>

              <h5>Shop<br>Location</h5>
              <section>
                <div class="form-wrap max-width-600 mx-auto">
                  <div class="row">
                    <div class="col-md-4 col-sm-12">
                      <div class="form-group">
                        <input type="text" name="shop_number" class="form-control form-control-lg" placeholder="No." required>
                      </div>
                    </div>
                    <div class="col-md-8 col-sm-12">
                      <div class="form-group">
                        <input type="text" name="street" class="form-control form-control-lg" placeholder="Street name" required>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-7 col-sm-12">
                      <div class="form-group">
                        <input type="text" name="city" class="form-control form-control-lg" placeholder="City" required>
                      </div>
                    </div>
                    <div class="col-md-5 col-sm-12">
                      <div class="form-group">
                        <input type="text" name="pincode" class="form-control form-control-lg" placeholder="Pincode" required>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <input type="text" name="area" class="form-control form-control-lg" placeholder="Area" required>
                  </div>

                  <div class="row">
                    <div class="col-md-6 col-sm-12">
                      <div class="form-group">
                        <input type="text" name="latitude" class="form-control form-control-lg" placeholder="Latitude" required>
                      </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                      <div class="form-group">
                        <input type="text" name="longitude" class="form-control form-control-lg" placeholder="Longitude" required>
                      </div>
                    </div>
                  </div>
                </div><br>
              </section>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/plugins/jquery-steps/jquery.steps.js"></script>
<script src="/vendors/scripts/steps-setting.js"></script>
